                </li>
                <li>
                    <a href="#">Z</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <!-- Content box Section -->
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Title<br />
                        <input type="text"
                               placeholder="Search.."
                               ng-model="userInputFilterTitle" />
                    </th>
                    <th>
                        Artist<br />
                        <input type="text"
                               placeholder="Search.."
                               ng-model="userInputFilterArtist" />
                    </th>
                    <th>
                        Album<br />
                        <input type="text"
                               placeholder="Search.."
                               ng-model="userInputFilterAlbum" />
                    </th>
                    <th>
                        Genre<br />
                        <input type="text"
                               placeholder="Search.."
                               ng-model="userInputFilterGenre" />
                    </th>
                    <th>
                        Year<br />
                        <!--Metti direttiva per inserire solo numeri (4 numeri)-->
                        <input type="text"
                               placeholder="Search.."
                               ng-model="userInputFilterYear" />
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="song in songList | filter : {TitleLabel : userInputFilterTitle, 
                                                            ArtistLabel : userInputFilterArtist, 
                                                            AlbumLabel : userInputFilterAlbum,
                                                            GenreLabel : userInputFilterGenre,
                                                            YearNumber : userInputFilterYear}">
                    <td>
                        <a ng-href="{{song.songDetailLink}}" title="Go to Song Details">
                            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                        </a>
                        {{song.TitleLabel}}
                    </td>
                    <td>
                        <a ng-href="{{song.artistDetailLink}}" title="Go to Artist Details">
                            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                        </a>
                        {{song.ArtistLabel}}
                    </td>
                    <td>
                        <a ng-href="{{song.albumDetailLink}}" title="Go to Album Details">
                            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                        </a>
                        {{song.AlbumLabel}}
                    </td>
                    <td>
                        {{song.GenreLabel}}
                    </td>
                    <td>
                        {{song.YearNumber}}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

