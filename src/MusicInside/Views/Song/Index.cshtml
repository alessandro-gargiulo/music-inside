@model List<MusicInside.ModelView.SongRowViewModel>

@section scripts{
    <script src="~/app/components/song/songSearchController.js"></script>
}

<section class="page-list song-list" 
         ng-controller="SongSearchController"
         ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model))">
    <div class="row">
        <!-- Navigation by letter Section -->
